name: CI

on:
  push:
    branches: ["main"]
  pull_request:
    types: [opened, synchronize]

jobs:
  spelling:
    name: Spelling
    timeout-minutes: 2
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v2
      - name: Install Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.9
      - name: Install codespell
        run: |
          python3 -m pip install --upgrade pip setuptools
          pip install codespell
      - name: Run codespell
        run: codespell posts
